{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Unbind",
  "version": "0.1.0",
  "identifier": "com.unbind.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Unbind",
        "width": 400,
        "height": 500,
        "resizable": false,
        "fullscreen": false,
        "visible": true,
        "decorations": true,
        "skipTaskbar": false,
        "alwaysOnTop": false,
        "focus": true
      }
    ],
    "security": {
      "csp": null
    },
    "trayIcon": {
      "iconPath": "icons/32x32.png",
      "iconAsTemplate": true
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
